<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Pending Requests</title>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Include Bootstrap stylesheet -->
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> -->
    <style>
        /* Your existing styles here */
      

        .profile-container {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 35px;
            border-radius: 8px;
            width: 600px; /* Adjusted width to 600px for a wider layout */
            text-align: center;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .profile-info {
            margin-left: 20px;
            text-align: left;
        }

        h1 {
            color: #000;
            font-weight: bold;
        }

        .profile-info p {
            margin: 10px 0;
        }

    


        .pending li {
            width: 22vw !important;
            height:20vw !important;
            list-style: none !important;
            padding: 20px !important;
            margin-left: 10px !important;
        }

        .image-user{
            border-radius: 50% !important;
        }
        .btn-accept {
            background-color: #28a745; /* Green color for accept button */
            color: #fff;
            margin-top: 10px ;
        }

        .btn-reject {
            background-color: #dc3545; /* Red color for reject button */
            color: #fff;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="pending" style="margin-left: 250px;">
    <h1 >Pending Requests</h1><br>
    <div style="display: flex;">
        <% if (typeof users !== 'undefined' && users.length > 0) { %>
            <div class="row">
                <% users.forEach((user, index) => { %>
                    <div class="col-md-4 mb-4">
                        <li class="rounded list-group-item-dark cursor-pointer user-list" data-id="<%=user._id%>">
                            <img src="<%=user.image%>" width="90px" height="90px" class="image-user">
                            <br><br>
                            <b>Name:</b> <%=user.username%><br>
                            <b>Mobile:</b> <%=user.mobile%><br>
                            <b>Email:</b> <%=user.email%><br>
                            <b>Friends: </b><%=user.friends.length%><br>
                            <button class="btn btn-accept" onclick="acceptRequest('<%= user._id %>')">Accept</button>
                            <button class="btn btn-reject" onclick="rejectRequest('<%= user._id %>')">Reject</button>
                        </li>
                    </div>
        
                    <% if ((index + 1) % 4 === 0 && index !== users.length - 1) { %>
                        </div>
                        <div class="row">
                    <% } %>
                <% }); %>
            </div>
        <% } else if (typeof users !== 'undefined' && users.length === 0) { %>
            <p>There are no pending requests</p>
        <% } %>
        
    </div>
    </div>
    <script>
        function acceptRequest(userId) {
            fetch('/pendingrequest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId , accept:true}),
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            })
            .catch(error => console.error('Error:', error));
        }

        function rejectRequest(userId) {
            fetch('/pendingrequest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId ,accept:false}),
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
