<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Pending Requests</title>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Include Bootstrap stylesheet -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        /* Your existing styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .profile-container {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 35px;
            border-radius: 8px;
            width: 600px; /* Adjusted width to 600px for a wider layout */
            text-align: center;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .profile-info {
            margin-left: 20px;
            text-align: left;
        }

        h1 {
            color: #333;
        }

        .profile-info p {
            margin: 10px 0;
        }

        img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .btn-bootstrap {
            /* Use the default Bootstrap color for the button */
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 10px;
            border: none;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
        }

        .btn-bootstrap:hover {
            background-color: #0056b3;
        }

        a {
            text-decoration: none;
            color: #3498db;
            margin-top: 10px;
            display: inline-block;
        }

        a:hover {
            color: #2c3e50;
        }
        .btn-accept {
            background-color: #28a745; /* Green color for accept button */
            color: #fff;
        }

        .btn-reject {
            background-color: #dc3545; /* Red color for reject button */
            color: #fff;
        }
    </style>
</head>
<body>
    <h1>Pending Requests</h1>
    <% if (typeof users !== 'undefined' && users.length > 0) { %>
        <% users.forEach(user => { %>
            <div class="profile-container">
                <img src="<%= user.image %>" alt="Profile Image">
                <div class="profile-info">
                    <h1>User Profile</h1>
                    <p><strong>Username:</strong> <%= user.username %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Mobile:</strong> <%= user.mobile %></p>
                    <p><strong>Number of Friends:</strong> <%= user.friends.length %></p>
                    <button class="btn-accept" onclick="acceptRequest('<%= user.id %>')">Accept</button>
                    <button class="btn-reject" onclick="rejectRequest('<%= user.id %>')">Reject</button>
                </div>
            </div>
        <% }); %>
    <% } else if (typeof users !== 'undefined' && users.length === 0) { %>
        <p>There are no pending requests</p>
    <% } %>

    <script>
        function acceptRequest(userId) {
            fetch('/pendingrequest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId , accept:true}),
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            })
            .catch(error => console.error('Error:', error));
        }

        function rejectRequest(userId) {
            fetch('/pendingrequest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId ,accept:false}),
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
<%-include('layouts/footer.ejs')%>