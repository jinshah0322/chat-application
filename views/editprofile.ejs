<%- include('layouts/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <style>
        .profile-container {
            background-color: #C6C8CA;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 35px;
            border-radius: 8px;
            width: 800px;
            text-align: center;
            display: flex;
            align-items: center;
        }

        body {
            color: #000 !important;
        }

        .profile-info {
            width: 100%;
            margin-left: 20px;
            text-align: left;
        }

        h1 {
            color: #333;
        }

        .profile-info p {
            margin: 10px 0;
            font-size: 17px;
        }

        img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-right: 30px;
        }

        .btn-bootstrap {
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 10px;
            border: none;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
        }

        button:hover {
            color: #fff !important;
        }

        .heading,
        input {
            font-size: 17px !important;
        }

        .intput-field {
            width: 300px;
        }

        td {
            vertical-align: middle !important;
            font-weight: 700;
        }

        .file-input {
            display: none;
        }

        .profile-image-container {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div style="margin-left: 250px;">
        <h1 style="margin-top: -30px;font-weight: 700;color: #000;">Edit Profile</h1><br>
        <% if (typeof message !== "undefined") { %>
            <p style="color: red;"><%= message %></p>
        <% } %>     
        <div class="profile-container">
            <div class="profile-image-container" onclick="document.getElementById('fileInput').click();">
                <img src="<%= user.image %>" alt="Profile Image">
                <input type="file" class="file-input" id="fileInput" name="profileImage" accept="image/*" onchange="displayImage(this);">
            </div>

            <div class="profile-info">
                        
                <div style="display: flex;">
                    <form action="" method="post">
                        <table class="table table-borderless">
                            <tr>
                                <td class="heading">Username </td>
                                <td>
                                    <input type="text" class="intput-field form-control" name="username" value="<%=user.username%>" important>
                                </td>
                            </tr>
                            <tr>
                                <td class="heading">Email </td>
                                <td><input type="email" class="intput-field form-control" name="email" value="<%=user.email%>" important></td>
                            </tr>
                            <tr>
                                <td class="heading">Mobile </td>
                                <td> <input type="text" class="intput-field form-control" name="mobile" value="<%=user.mobile%>" important></td>
                            </tr>
                            <tr>
                                <td colspan="2"> <input type="submit" class="btn btn-bootstrap" value="Update"></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function displayImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    document.querySelector('.profile-image-container img').src = e.target.result;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <%- include('layouts/footer.ejs') %>
</body>
</html>
