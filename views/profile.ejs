<%-include('layouts/header.ejs')%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Include Bootstrap stylesheet -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .profile-container {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 35px;
            border-radius: 8px;
            width: 600px; /* Adjusted width to 600px for a wider layout */
            text-align: center;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .profile-info {
            margin-left: 20px;
            text-align: left;
        }

        h1 {
            color: #333;
        }

        .profile-info p {
            margin: 10px 0;
        }

        img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .btn-bootstrap {
            /* Use the default Bootstrap color for the button */
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 10px;
            border: none;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
        }

        .btn-bootstrap:hover {
            background-color: #0056b3;
        }

        a {
            text-decoration: none;
            color: #3498db;
            margin-top: 10px;
            display: inline-block;
        }

        a:hover {
            color: #2c3e50;
        }

    </style>
</head>
<body>
    <div class="profile-container">
        <img src="<%=user.image%>" alt="Profile Image">
        <div class="profile-info">
            <h1>User Profile</h1>
            <p><strong>Username:</strong> <%=user.username%></p>
            <p><strong>Email:</strong> <%=user.email%></p>
            <p><strong>Mobile:</strong> <%=user.mobile%></p>
            <p><strong>Number of Friends:</strong> <%=user.friends.length%></p>
            <button class="btn btn-bootstrap">Edit Profile</button>
        </div>
    </div>

    <!-- Include Bootstrap JavaScript and jQuery -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
<%-include('layouts/footer.ejs')%>